
<div class="fullscreen-container pl-5">

  <video id="VideoBackground" poster="https://res.cloudinary.com/mandarine8/image/upload/v1574890386/o8fxl4kkhix3yvmnj898.jpg" autoplay muted loop>
    <source src="https://res.cloudinary.com/mandarine8/video/upload/v1574890189/ocsqjst8mb2r6vyqepz7.mp4" type="video/mp4">
  </video>

  <div class="card-home ml-4">
    <div class="card-body p-5">
      <h3 class="mb-4">Create your perfect ski journey</h3>

      <%= form_tag skivents_path, method: :get do %>
        <div class="form-group">
          <input class="form-control" type="text" name="query" id="search_query" placeholder="Enter the departure city" />
        </div>
        <div class="form-group">
          <select class="form-control" name="Distance" id="search_level">
            <option value="">Choose the distance from your city</option>
            <option value="beginner">Less than 70km</option>
            <option value="intermediate">Less than 130km</option>
            <option value="expert">Less than 170km</option>
          </select>
        </div>
        <div class="form-group">
          <select class="form-control" name="level" id="search_level">
            <option value="">Choose your ski level</option>
            <option value="beginner">Beginner</option>
            <option value="intermediate">Intermediate</option>
            <option value="expert">Expert</option>
          </select>
        </div>
        <div class="form-group">
          <input class="form-control" name="date" id="search_date" placeholder="mm/jj/aaaa" data-provide="datepicker" />
        </div>
        <div class="d-flex justify-content-end">
           <button type="submit" class="btn btn-primary">Search a Skivent</button>
        </div>
        <!-- <%= link_to "See all the Skivents", skivents_path, class: "btn btn-outline-primary" %> -->
      <% end %>
    </div>
  </div>

</div>

