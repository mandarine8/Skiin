<div class="content-other-user">

  <div class="margin-top-user">
    <div class="row flex-nowrap">
      <%= render "users/other_user_info_card"%>
      <div class="col-sm-12 col-lg-6 mb-3 mt-5 pt-2">
        <!-- Tab Nav -->
        <nav>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active"
              id="nav-past-skivents-tab"
              data-toggle="tab"
              href="#nav-past-skivents"
              role="tab"
              aria-controls="nav-past-skivents"
              aria-selected="true">
              Past skivents
            </a>
            <a class="nav-item nav-link"
              id="nav-incoming-skivents-tab"
              data-toggle="tab"
              href="#nav-incoming-skivents"
              role="tab"
              aria-controls="nav-incoming-skivents"
              aria-selected="false">
              Incoming skivents
            </a>
            <a class="nav-item nav-link"
              id="nav-reviews-tab"
              data-toggle="tab"
              href="#nav-reviews"
              role="tab"
              aria-controls="nav-reviews"
              aria-selected="true">
              Reviews
            </a>
          </div>
        </nav>

        <div class="tab-content" id="nav-tabContent">

          <div class="tab-pane fade show active" id="nav-past-skivents" role="tabpanel" aria-labelledby="nav-past-skivents-tab">

            <% @booked_skivents.each do |booked_skivent| %>
              <div class="card-picture-skivent-user-show border  m-3">
                 <%= cl_image_tag booked_skivent.photo, class: "card-img-left" %>
                <div class="card-skivent-infos">
                  <div>
                    <strong><%= link_to booked_skivent.title %></strong>
                    <div class="card-skivent-host">
                      <p><%= booked_skivent.description %></p>
                    </div>
                    <img src="<%= booked_skivent.user.picture %>" alt="" class="avatar-bordered">
                    <%= link_to booked_skivent.user.name %>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
          <!-- enf of past skivents tab -->

          <div class="tab-pane fade show" id="nav-incoming-skivents" role="tabpanel" aria-labelledby="nav-past-skivents-tab">

            <% @requested_bookings.each do |booking| %>
              <div class="card-picture-skivent-user-show border m-3">

                <%= cl_image_tag booking.skivent.photo, class: "card-img-left" %>

                <div class="card-skivent-infos">
                  <strong> <%= booking.skivent.title %></strong>
                  <h2 class="card-skivent-host"></h2>
                  <p><%= booking.skivent.description %></p>
                  <img src=<%= booking.skivent.user.picture %> alt="" class="avatar-bordered">
                  <%= link_to booking.skivent.user.name %>
                  <div>
                    <%= booking.status %>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
          <!-- end of past skivents tab -->

          <div class="tab-pane fade show" id="nav-reviews" role="tabpanel" aria-labelledby="nav-past-skivents-tab">

           reviews

          </div>
          <!-- enf of past skivents tab -->




        </div>
        <!-- tab-content -->



      </div>

    </div>

  </div>

</div>
