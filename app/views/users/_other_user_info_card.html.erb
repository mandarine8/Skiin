
    <div class="col-10 col-lg-5 background-content ">
        <div class="content-name">
            <div class="card-user-name-rating">
                    <div class="picto-arrow d-flex">
                    <i class="fas fa-arrow-left"></i>
                    </div>
                    <img class="img-circle avatar-big" src="<%= @user.picture %>" width="100px">
                    <div>
                        <h4 class="card-color"><%= @user.name %></h4>
                        <% [1,2,3,4,5].sample.times do %>
                            <i class="picto-snow far fa-snowflake"></i>
                        <% end %>
                    </div>
            </div>
        </div>
        <!-- end of .card-user-name -->
        <div class="content-description">
            <div class="card-user-description">
                <h3> Who I am </h3>
                <p><%= @user.description %></p>
            </div>
        </div>
         <!-- end of .card-user-description -->
        <div class="content-info">
            <div class="card-user-info">
                <h3> My Skiin info</h3>
                <h5> Ski Level </h5>
                <div class="level_content_container">
                    <div class="level-content">
                         <p><%= @user.level %></p>
                    </div>
                </div>
            </div class="content-hobby">
                <h5> Driving Information </h5>
                        <% if @user.car == true %>
                        <%= "Yes" %>
                        <% else "no" %>
                        <% end %>
                 <h5> Hobbies </h5>
                     <p><%= @user.hobbies %></p>
        </div>
         <!-- end of .card-user-infos -->
            <div class="content_btn mb-4">
            <% unless @user == current_user %>
                <div class="d-flex justify-content-center" style="align-items: center;">
                    <%= link_to "Contact me", skivents_path, class:"btn-yellow" %>
                </div>
            <% end %>
                    <div class="d-flex justify-content-center" style="align-items: center; margin:50px;">
                        <%= link_to "Back to the skivents", skivents_path, class:"btn-white" %>
                    </div>
                </div>
        </div>
