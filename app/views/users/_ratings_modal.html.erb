 <!-- Modal review-->
<div class="modal fade"
  id="add-review-<%= booked_skivent.id %>"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-skiin" role="document" style="width: 550px; padding: 30px;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Your review to <%= booked_skivent.user.name %> for the Skivent <%= booked_skivent.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- corps -->
      <div class="modal-body">
          <!-- event infos -->
          <div class="card-skivent-info">
              <%= simple_form_for([current_user, @rating]) do |f| %>
                <%= f.input :rating, collection: (1..5).to_a %>
                <%= f.input :skivent, as: :hidden, input_html: {value: booked_skivent.id} %>
                <textarea id="subject" name="subject" placeholder="Your review" rows="5" cols="55" m-4 ></textarea>
              <% end %>
          </div>
      </div>
      <div class="modal-footer">
        <%= link_to "Send your review", user_path(current_user), class: 'btn btn-primary'  %>
      </div>
    </div>
  </div>
</div>
