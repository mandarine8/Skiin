<!-- banner caroussel-->

<div class="resort-carousel mb-4">

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="header-container">
      <h3><%= @resort.name %></h3>
    </div>

    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <% @resort.pictures&.each_with_index do |picture, index| %>
        <div class="carousel-item <%= index ==  0 ? "active" : "" %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path picture %>');"></div>
      <% end %>
      <!-- <div class="carousel-item" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.snow-forecast.com/system/images/33934/large/Tremblant.jpg?1568783588');"></div> -->
      <!-- <div class="carousel-item" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.tremblant.ca/-/media/tremblant/things-to-do/activities/winter-pedestrian-ticket-m.ashx?h=432&w=768&hash=EC3ECD248439B1B38B95ECD074B42DAE');"></div> -->
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-5">
      <!-- Affichage du descriptif de la station  -->
      <div class="card card-resort w-100">
        <div class="card-body">
          <h4 class="card-title">Description</h4>
          <p class="card-text">Description of the resort. Some lines about the station</p>
          <h6 class="card-subtitle mb-2 text-muted">Informations about the resort</h6>
          <p class="card-text">Icones et descriptif</p>
          <h6 class="card-subtitle mb-2 text-muted">Weather for the 5 next days</h6>
          <p class="card-text">Icones et descriptif</p>
          <button type="button" class="btn btn-outline-primary">See the website</button>
        </div>
      </div>
    </div>
    <div class="col">
      <!-- Affichage des skivents de la station  -->
      <div class="row">
        <% @skivents.each do |skivent| %>
          <div class="col-7">
            <%= render "skivents/card", skivent: skivent %>

            <!-- Modal -->
            <div class="modal fade" id="skivent-<%= skivent.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog modal-skiin" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> <%= skivent.title %></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>

                  <!-- corps -->
                  <div class="modal-body">

                    <!-- container externe -->
                    <div class="content row">
                      <div class="card-skievent-details col-sm-12 col-md-7">
                        <!-- container externe -->
                        <div class="card-pictos">
                          <!-- event infos -->
                          <div class="card-skivent-info">
                            <h3>Event information</h3>
                            <p> PICTOS</p>
                          </div>

                          <!-- resort infos -->
                          <div class="card-skivent-info">
                            <h3>About <%= skivent.resort.name %> </h3>
                            <p> PICTOS</p>
                          </div>
                        </div>

                        <!-- description event -->
                        <div class="card-skivent-description">
                          <h3>Event description</h3>
                          <p> <%= skivent.description %></p>
                        </div>
                      </div>

                      <!-- description profil -->
                      <div class="card-skivent-host col-sm-12 col-md-5">
                        <h3>Event posted by:</h3>
                        <%= link_to image_tag(skivent.user.picture, class: "avatar"), skivents_path %>
                        <%= skivent.user.name %>
                        <h3>About <%= skivent.user.name %></h3>
                        <p> <%= skivent.user.description %></p>
                      </div>
                    </div>

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-secondary">Book now!</button>
                    <button type="button" class="btn btn-primary">Contact the host</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-center mt-3">
        <%= link_to "Back to all the Skivents", @previous_url || skivents_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>


</div>
