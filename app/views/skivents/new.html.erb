<div class="container-new margin-top">


<form class="form-center" action="/skivents" method= "post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
            <label for="exampleFormControlInput1">Change skivent's name</label>
            <input type="text" name="skivent[title]" class="form-control" id="exampleFormControlInput1" placeholder="skivent's name">
        </div>
    

 <div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label for="exampleFormControlInput1">Choose a date</label>
            <input name="skivent[date]" type="date" class="form-control" id="exampleFormControlInput1" placeholder="choose a date">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="exampleFormControlInput1">Choose a resort </label>
            <select name="skivent[resort_id]" class="form-control" id="exampleFormControlSelect1">
                <%= options_for_select(Resort.pluck(:name, :id)) %>
            </select>
        </div>
    </div>
</div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Level of the skivent</label>
            <select name="skivent[level]"class="form-control" id="exampleFormControlSelect1">
            <option>Beginner</option>
            <option>Intermediate</option>
            <option>expert</option>
            </select>
        </div>
   

    
        <div class="form-group">
            <label for="exampleFormControlSelect1">Do you have a car ?</label>
            <select name="skivent[car]"class="form-control" id="exampleFormControlSelect1">
            <option value="true">Yes</option>
            <option value="false">No</option>
            </select>
        </div>
    
    
        <div class="form-inline">
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">How many available seats do you have ?</label>
        <select name="skivent[number_of_place]" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
            <option selected>Choose...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
        </div>
    
    
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Event description</label>
            <textarea name="skivent[description]" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
   
   
    <input type="submit" class="btn-yellow" value="Create a skivent">
</form>
   
</div>
