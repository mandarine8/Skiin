 <!-- Modal -->
  <div class="modal fade" id="skivent-<%= skivent.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-skiin" role="document">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"> <%= skivent.title %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <!-- corps -->
        <div class="modal-body">

          <!-- container externe -->
          <div class="content row">

            <div class="card-skievent-details col-sm-12 col-md-7">

            <div class="card-skivent-host col-sm-12 col-md-5">
              <div class="rating">
                <p>
                  <% ((@user.rating.reduce(0) { |sum, val| val.note + sum } / @user.rating.count) rescue 0).times do %>
                    <i class="picto-snow far fa-snowflake"></i>
                  <% end %>
                </p>
                  <% if @user != current_user %>
                <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal">
                  rating <%= skivent.user.name %>
                </button>
                <% end %>
              </div>

              <h3>Event posted by:</h3>
              <%= link_to image_tag(skivent.user.picture, class: "avatar"), user_path(skivent.user) %>
              <%= skivent.user.name %>
              <h3>About <%= skivent.user.name %></h3>
              <p> <%= skivent.user.description %></p>
            </div>
            </div>

              <!-- card-pictos -->
              <div class="card-pictos">

                <!-- event infos -->
                <div class="card-skivent-info">
                  <h3>Event information</h3>
                  <p> PICTOS</p>
                </div>
                <!-- end of event infos -->

                <!-- resort infos -->
                <div class="card-skivent-info">
                  <h3>About <%= skivent.resort.name %> </h3>
                  <p> PICTOS</p>
                </div>
                <!-- end of resort infos -->

              </div>
              <!-- end of card-pictos -->

              <!-- description event -->
              <div class="card-skivent-description">
                <h3>Event description</h3>
                <p> <%= skivent.description %></p>
              </div>
              <!-- end of description event -->


              </div>

            <!-- description profil -->

            <!-- end of description profil -->

          <!-- end of container externe -->

        </div>


        <div class="modal-footer">
          <% if skivent.user != current_user %>
            <%= link_to "book now", skivent_bookings_path(skivent), method: :post, class: 'btn btn-secondary'  %>
            <button type="button" class="btn btn-primary">Contact the host</button>
          <% else %>
            <p>petit farceur, tu es l'auteur-ice de ce skivent !</p>
          <% end %>
        </div>

     </div>
    </div>
  </div>
